<body>
    <h2>HTML Table</h2>
    <table class="table table-hover responsive">
        <thead>
            <tr>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i < dataTable.length; i++) { %>
                <tr>
                    <td>
                        <%= dataTable[i].email %>
                    </td>
                    <td>
                        <%= dataTable[i].firstName %>
                    </td>
                    <td>
                        <%= dataTable[i].lastName %>
                    </td>
                    <td>
                        <%= dataTable[i].address %>
                    </td>
                    <td>
                        <a class="btn btn-warning" href="/edit-crud?id=<%= dataTable[i].id %>">Edit</a>
                        <a class="btn btn-danger" href="/delete-crud?id=<%= dataTable[i].id %>">Delete</a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
</body>

